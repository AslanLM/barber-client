---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/fav.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --bg-color: #000; /* #212121 */
    --primary-color: #1a1a1a;
    --accent-color: #212121;
    --secondary-color: #c5a981;
    --secondary-color-hover: #b5915e;
    --decoration-color: #3b3b3b;
    --text-color: #f5f5f5;
    --text-color-hover: #a3a3a3;
    --text-btn: #463722;
  }

  @font-face {
    font-family: 'Posterama';
    src: url('/fonts/Posterama.ttf') format('truetype');
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    width: 100%;
    scroll-behavior: smooth;
    scroll-padding: 5rem;
  }

  body {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #4f4f4f2e 1px, transparent 1px),
      linear-gradient(to bottom, #8080800a 1px, transparent 1px);
    background-color: var(--bg-color);
    background-size: 14px 24px;
    font-family: 'Montserrat', sans-serif;
    color: var(--text-color);
  }

  /* Para navegadores Webkit (Chrome, Safari) */
  body::-webkit-scrollbar {
    width: 10px;
  }

  body::-webkit-scrollbar-track {
    background: var(--primary-color);
  }

  body::-webkit-scrollbar-thumb {
    background: var(--secondary-color);
    border-radius: 12px;
  }

  body::-webkit-scrollbar-thumb:hover {
    background: #a59c6d;
  }

  a {
    all: unset;
    cursor: pointer;
  }

  button {
    all: unset;
    cursor: pointer;
  }

  img {
    object-fit: cover;
    object-position: center;
    width: auto;
    height: 100%;
  }

  ul {
    list-style: none;
  }
</style>
